<div id="page">

    {% if page.header %}
        <section id="header">
            {{ page.header }}
        </section>
    {% endif %}

    <header>
    </header>
    <section class="main">
        <div class="content">
            {{ page.content }}
        </div>
        {% if page.left %}
            {% block left %}
                <aside class="left">
                    {% if sidebar_mpu %}
                        {{ sidebar_mpu }}
                    {% endif %}
                    {{ page.left }}
                </aside>
            {% endblock %}
        {% endif %}
    </section>
    {% if page.footer %}
        <footer id="footer">
            {{ page.footer }}
        </footer>
    {% endif %}

</div>

